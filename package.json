{
  "name": "rpi-matrix-node",
  "version": "1.0.0",
  "description": "Node.js Typescript bindings for hzeller/rpi-rgb-led-matrix",
  "main": "src/index.ts",
  "author": "Alex Eden",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexeden/rpi-matrix-node.git"
  },
  "scripts": {
    "rebuild": "node-gyp rebuild",
    "build": "rimraf dist && node-gyp build && tsc -p src",
    "test": "node dist/font.spec.js",
    "sync-changes": "echo 'Changes will be pushed to Raspberry Pi' && nodemon --config nodemon.sync.json",
    "build-changes": "echo 'Source will rebuild on changes' && nodemon --config nodemon.build.json",
    "merge-submodule-upstream": "(cd rpi-rgb-led-matrix && git fetch && git merge origin/master)"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^1.6.2"
  },
  "devDependencies": {
    "@types/color": "^3.0.0",
    "@types/node": "^11.11.4",
    "@types/prompts": "^1.2.0",
    "chalk": "^2.4.2",
    "color": "^3.1.0",
    "globby": "^9.1.0",
    "nodemon": "^1.18.10",
    "ora": "^3.2.0",
    "prompts": "^2.0.4",
    "rimraf": "^2.6.3",
    "rsync": "^0.6.1",
    "tslint": "^5.14.0",
    "typescript": "^3.4.1"
  }
}
